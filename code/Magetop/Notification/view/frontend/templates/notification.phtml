<script>
    require(['jquery'], function($) {
        $(document).ready(function() {
            $('#view-more-notifiy').click(function(e) {

                $.ajax({
                    url: '<?= $block->getUrl('marketplace/notification/viewmore') ?>',
                    type: 'POST',
                    data: {id: <?= $seller->getUserId() ?>},
                    success: function(response) {


                    }.bind(this)
                });
            });


            // Toggle dropdown
            $('#notification-bell').click(function(e) {
                e.stopPropagation();
                $('#notification-dropdown').toggle();
            });

            // Close dropdown when clicking outside
            $(document).click(function() {
                $('#notification-dropdown').hide();
            });

            // Mark as read when clicking on notification
            $('.notification-item.unread').click(function() {
                var notificationId = $(this).data('notification-id')
                console.log($(this))
                console.log(notificationId)
                // AJAX call to mark as read
                $.ajax({
                    url: '<?= $block->getUrl('marketplace/notification/markAsRead') ?>',
                    type: 'POST',
                    data: {id: notificationId},
                    success: function(response) {
                        if (response.success) {
                            $(this).removeClass('unread');
                            // Update counter
                            var counter = $('.notification-counter');
                            var count = parseInt(counter.text()) - 1;
                            if (count > 0) {
                                counter.text(count);
                            } else {
                                counter.remove();
                            }
                        }
                    }.bind(this)
                });
            });
        });
    });


</script>
